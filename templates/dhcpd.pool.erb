#################################
# <%= @name %>
#################################
subnet <%= @network %> netmask <%= @mask %> {
<% if @range -%>
  pool
  {
    range <%= @range %>;
  }
<% end -%>

<% if @domain_name -%>
  option domain-name "<%= @domain_name %>";
<% end -%>
  option subnet-mask <%= @mask %>;
<% if @gateway -%>
  option routers <%= @gateway %>;
<% end -%>
<% if @pxeserver -%>
  next-server <%= @pxeserver %>;
<% end -%>
}

